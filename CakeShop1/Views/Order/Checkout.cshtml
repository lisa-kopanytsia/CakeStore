@model Order

<form asp-action="Checkout" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="danger"></div>

    <div class="form-group">
        <label asp-for="FirstName" class="col-md-2 control-label">Имя</label>
        <div class="col-md-5">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-md-2 control-label">Фамилия</label>
        <div class="col-md-5">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="FatherName" class="col-md-2 control-label">Отчество</label>
        <div class="col-md-5">
            <input asp-for="FatherName" class="form-control" />
            <span asp-validation-for="FatherName" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-md-2 control-label">Улица</label>
        <div class="col-md-5">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label">Контактный номер</label>
        <div class="col-md-5">
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Оформить заказ" />
        </div>
    </div>
</form>