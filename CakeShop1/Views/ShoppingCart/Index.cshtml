@model ShoppingCartViewModel

<h2>Корзина</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Товар</th>
            <th>Количество</th>
            <th>&nbsp;</th>
            <th class="text-right">Цена</th>
            <th class="text-right">Общая стоимость</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.ShoppingCart.ShoppingCartItems)
        {
        <tr>
            <td class="text-left">@item.Product.Name</td>
            <td class="text-center">@item.Amount</td>
            <td class="text-center"><a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-productId="@item.Product.ProductId" alt="">Уменьшить количество</a></td>
            <td class="text-right">@item.Product.Price.ToString("c")</td>
            <td class="text-right">
                @((item.Amount*item.Product.Price).ToString("c"))
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" class="text-right">Сумма заказа</td>
            <td class="text-right">@Model.ShoppingCartTotal.ToString("c")</td>
        </tr>
    </tfoot>
</table> 
<div class="text-center">
    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="ClearCart">Очистить корзину</a>
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Оформить заказ</a>
</div>